<div class="page-header">
  <%= link_to new_receita_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h1>Lista</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Valor</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @receitas) do |receita| %>
            <td><%= receita.nome %></td>
            <td><%= receita.descricao %></td>
            <td><%= receita.valor %></td>
            <td><%= link_to 'Mostrar', receita %></td>
        <td><%= link_to 'Editar', edit_receita_path(receita) %></td>
        <td><%= link_to 'Apagar', receita, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
