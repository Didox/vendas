<div class="page-header">
  <%= link_to new_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h1>Lista</h1>
</div>

<div style="text-align: right;margin-top:10px">
  <form action="/produtos" method="get">
    <div class="row" style="width:300px;display: inline-block;">
      <div style="float: left">
        <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control" placeholder="Busca ..">
      </div>
      <div style="float: left;margin-left:5px">
        <input type="submit" class="btn btn-primary" value="Buscar"></div>
    </div>
  </form>
</div>
<hr>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Quantidade</th>
        <th>Vencimento</th>
        <th>Preco compra</th>
        <th>Preco venda</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @produtos) do |produto| %>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.vencimento %></td>
        <td><%= produto.preco_compra %></td>
        <td><%= produto.preco_venda %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
  <div class="apple_pagination">
    <%= will_paginate @concursos, :container => false %>
  </div>
</div>
